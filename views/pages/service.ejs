<!DOCTYPE html>
<html lang="en" dir="lrt">

<main>
  <!-- Breadcrumb Area S t a r t -->
  <section class="breadcrumb-section breadcrumb-bg">
    <div class="container">
      <div class="breadcrumb-text">
        <nav aria-label="breadcrumb" class="breadcrumb-nav wow fadeInUp" data-wow-delay="0.0s">
          <ul class="breadcrumb listing">
            <li class="breadcrumb-item single-list"><a href="/" class="single">
                <%=pageText.home%>
              </a></li>
            <li class="breadcrumb-item single-list" aria-current="page"><a href="javascript:void(0)" class="single">
                <%=pageText.services%>
              </a></li>
          </ul>
        </nav>
        <h1 class="title wow fadeInUp" data-wow-delay="0.1s">
          <%=pageText.serviceList%>
        </h1>
      </div>
    </div>
  </section>
  <!-- End-of Breadcrumb Area -->

  <!-- donate S t a r t -->
  <section class="donate-section top-bottom-padding">
    <div class="container">
      <div class="row gy-24">
        <% pageText.servicesListData.forEach((service, index)=> { %>

          <div class="col-xl-4 col-lg-4 col-md-6 col-sm-12 view-wrapper">
            <div class="single-donate<%=index%> h-calc single-donate">
              <div class="donate-img position-relative">
                <a href="donation-details.html"> <img class="w-100"
                    src="../../../assets/images/gallery/<%=service.imageName%>" alt="img">
                </a>
                <div class="donate-badge">
                  <p class="subtitle">
                    <%=service.name%>
                </div>

              </div>
              <div class="donate-info">
                <div class="d-flex justify-content-between align-items-center">
                  <div class="donate-info-title justify-content-between">
                    <div>
                      <h4 class="title text-capitalize"><a href="donation-details.html">
                          <%=service.description%>

                      </h4>
                    </div>
                    <div>

                      <div class="progress custom-progress-two">
                        <div class="progress-bar" style=<%='width:' +service.hotness+'%'%>></div>
                      </div>
                      <div class="flex justify-content-between mt-14 mb-20">
                        <div class="flex gap-20">

                        </div>

                      </div>
                      <a href="donate-payment.html" class="btn donate-btn w-100">
                        <%=pageText.viewMore%>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <% }) %>




      </div>

    </div>
  </section>
  <!-- End-of donate -->


</main>

</body>

</html>